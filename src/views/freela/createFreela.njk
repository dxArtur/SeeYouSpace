{% extends "layout.njk" %} {% block content %} {{ title }}

<div class="box-card-login">
  <form id="formFreela" action="/space/freela/add" method="post">
    <input type="hidden" value="{{ userId }}" name="id" />

    <div class="form-group label">
      <label for="freela-title">Title</label>
    </div>

    <div class="col-md-6 form-group element">
      <input
        type="text"
        placeholder="Title"
        class="form-control"
        id="freela-title"
        name="title"
        required
      />
    </div>

    <div class="form-group label">
      <label for="freela-description">Description</label>
    </div>

    <div class="col-md-6 form-group element">
      <input
        type="text"
        placeholder="Description"
        class="form-control"
        id="freela-description"
        name="description"
        required
      />
    </div>

    <div class="form-group label">
      <label for="freela-reward">Reward</label>
    </div>

    <div class="col-md-6 form-group element">
      <input
        type="number"
        placeholder="Reward"
        class="form-control"
        id="freela-reward"
        name="reward"
        required
      />
    </div>

    <input type="hidden" name="author" value="{{ user._id }}" />

    <div class="col-md-6 form-group element">
      <button type="submit" class="btn btn-primary">Register Freela</button>
    </div>
  </form>
</div>
{% endblock %}
