{% extends "layout.njk" %}


{% block content %}

  {{ title }}


<div class ="box-card-login">
    
        <form id="formUser" action="/auth" method="post">
            <div class="form-group label">
                <label>Login</label>
            </div>
            <div class="col-md-6 form-group element">
                <input type="email" placeholder="email" class="form-control" id="user-email" name="email">
            </div>
            <div class="col-md-6 form-group element">
                <input type="password" placeholder="password" class="form-control" id="user-password" name="password">
            </div>
             <div class="col-md-6 form-group element">
                <button type="submit" class="btn btn-primary">See You Space</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}